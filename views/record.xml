<odoo>
    <record id="form_view_record" model="ir.ui.view">
        <field name='name' >office_record.form</field>
        <field name="model">office_record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="emp_id"/>
                        <field name="emp_cno"/>
                        <field name="emp_mail"/>
                        <field name="emp_add"/>
                        <field name="emp_aad_id"/>
                        <field name="emp_bank"/>
                        <field name="emp_photo"/>
                        <field name="emp_doc1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tree_view_record" model="ir.ui.view">
        <field name='name' >office_record.tree</field>
        <field name="model">office_record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="emp_id"/>
                <field name="emp_cno"/>
                <field name="emp_mail"/>
                <field name="emp_add"/>
                <field name="emp_aad_id"/>
                <field name="emp_bank"/>
                <field name="emp_photo" widget="image" />
                <field name="emp_doc1"/>
        </tree>
        </field>
    </record>
    <record id="view_record_kanban" model="ir.ui.view">
        <field name="name">office.record.kanban</field>
        <field name="model">office_record</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="emp_id"/>
                <field name="emp_cno"/>
                <field name="emp_mail"/>
                <field name="emp_add"/>
                <field name="emp_aad_id"/>
                <field name="emp_bank"/>
                <field name="emp_photo" widget="image" />
                <field name="emp_doc1"/>
                <templates>
                    <t t-name="kanban-box">
                            <div class="o_kanban_details oe_kanban_global_click o_kanban_record" t-att-record="record">
                                <!-- <field name="emp_photo" widget="image" style=" width:20px !important, height :20px !important" /> -->
                                <!-- <div class="o_kanban_image"> -->
                                <img t-att-src="kanban_image('office_record', 'emp_photo', record.id.raw_value)" style="width:250px" />
                            <!-- </div> -->
                            
                                <br/>
                                <hr/>

                                <strong> Emp Contact Number : <field name="emp_cno"/></strong>
                                <br/>
                                <hr/>

                                <strong> Emp mail : <field name="emp_mail"/></strong>
                                <br/>
                                <hr/>

                                <strong> Emp Add : <field name="emp_add"/></strong>
                                <br/>
                                <hr/>

                                <strong> Emp Govt Id : <field name="emp_aad_id"/></strong>
                                <br/>
                                <hr/>

                                <strong> Bank Account: <field name="emp_bank"/></strong>
                                <br/>
                                
                                <hr/>
                                <strong> Employee Id : <field name="emp_id"/></strong>

                                <br/>
                                <hr/>

                                <strong> Documents : <field name="emp_doc1"/></strong>
                                <br/>
                                

                            </div>
                            


                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_view_record" model="ir.actions.act_window">
        <field name="name">Record</field>
        <field name="res_model">office_record</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="tree_view_record" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first employee
            </p>
        </field>
    </record>
</odoo>