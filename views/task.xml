<odoo>
    <record id="form_view_task" model="ir.ui.view">
        <field name='name' >office_task.form</field>
        <field name="model">office_task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="team_id"/>
                        <field name="project"/>
                        <field name="start_dt"/>
                        <field name="time"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tree_view_task" model="ir.ui.view">
        <field name='name' >office_task.tree</field>
        <field name="model">office_task</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="team_id"/>
                        <field name="project"/>
                        <field name="start_dt"/>
                        <field name="time"/>
                        <field name="status"/>


            </tree>
        </field>
    </record>
     <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">office.task.kanban</field>
        <field name="model">office_task</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="team_id"/>
                <field name="project"/>
                <field name="start_dt"/>
                <field name="time"/>
                <field name="status"/>


                <templates>
                    <t t-name="kanban-box">
                            <div class="o_kanban_details oe_kanban_global_click o_kanban_record" t-att-record="record">
                            
                                <strong> Team Name : <field name="team_id"/></strong>
                                <br/>
                                <hr/>

                                <strong> Project : <field name="project"/></strong>
                                <br/>
                                <hr/>

                                <strong> Start Date : <field name="start_dt"/></strong>
                               
                                <br/>
                                <hr/>

                                <strong> Time : <field name="time"/></strong>
                               
                                <br/>
                                <hr/>

                                <strong> Status : <field name="status"/></strong>
                               

                            </div>
                            


                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_view_task" model="ir.actions.act_window">
        <field name="name">Task</field>
        <field name="res_model">office_task</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="tree_view_task" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first employee
            </p>
        </field>
    </record>
</odoo>